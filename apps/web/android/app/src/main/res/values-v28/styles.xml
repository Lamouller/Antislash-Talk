<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android P (API 28+) specific styles for display cutouts -->
    
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        
        <!-- Edge-to-edge display support -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Display cutout mode for Android P+ -->
        <!-- shortEdges: Content renders into cutout area in portrait and landscape -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        
        <!-- Light status bar icons -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Allow content to extend under system bars -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>
