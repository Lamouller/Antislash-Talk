{
  "name": "@antislash-talk/monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "AI-Powered Meeting Transcription Platform - Self-Hosted Monorepo",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @antislash-talk/web dev",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "dev:web": "pnpm --filter @antislash-talk/web dev",
    "dev:api": "pnpm --filter @antislash-talk/api dev",
    "build": "pnpm --recursive --filter './apps/**' build",
    "build:web": "pnpm --filter @antislash-talk/web build",
    "build:api": "pnpm --filter @antislash-talk/api build",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive typecheck",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose build && docker-compose up -d",
    "supabase:start": "cd packages/supabase && supabase start",
    "supabase:stop": "cd packages/supabase && supabase stop",
    "supabase:status": "cd packages/supabase && supabase status",
    "supabase:reset": "cd packages/supabase && supabase db reset",
    "deploy:local": "node packages/scripts/deploy-local.mjs",
    "deploy:prod": "node packages/scripts/deploy-production.mjs",
    "setup": "node packages/scripts/setup.mjs",
    "db:migrate": "cd packages/supabase && supabase db push",
    "db:types": "cd packages/supabase && supabase gen types typescript --local > ../types/src/database.ts"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.0",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.4.2",
    "turbo": "^2.3.6",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
